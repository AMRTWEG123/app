<picture>

	{{! Images for large screens }}
	<source
		media="(min-width: 1280px)"
		srcset="{{imgSrcWebP}}"
		type="image/webp">
	<source
		media="(min-width: 1280px)"
		srcset="{{imgSrc}}">

	{{! Images for medium screens }}
	<source
		media="(min-width: 1024px) and (max-width: 1280px)"
		srcset="{{mediumUrlWebP}}"
		type="image/webp">
	<source
		media="(min-width: 1024px) and (max-width: 1280px)"
		srcset="{{mediumUrl}}">

	{{! Images for small screens }}
	<source
		media="(max-width: 768px)"
		srcset="{{smallUrlWebP}}"
		type="image/webp">
	<source
		media="(max-width: 768px)"
		srcset="{{smallUrl}}">

	{{! Fall back to img tag for browsers that don't support picture tag yet }}
	{{>Thumbnail_imgTag}}

</picture>
