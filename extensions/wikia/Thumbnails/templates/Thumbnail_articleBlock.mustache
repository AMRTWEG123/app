<figure class="article-thumb {{figureClass}}" style="width: {{width}}px">
	{{#showInfoIcon}}
	<span class="article-thumb-wrapper">
	{{/showInfoIcon}}

	{{{thumbnail}}}

	{{#showInfoIcon}}
		<a href="{{linkHref}}" class="sprite info-icon"></a>
	</span>
	{{/showInfoIcon}}

	<figcaption>
		{{#title}}
			<p class="title">{{title}}</p>
		{{/title}}
		{{#caption}}
			<p class="caption">{{{caption}}}</p>
		{{/caption}}
	</figcaption>
</figure>