<section class="recirculation-impact-footer">
	<h2>{{title}}</h2>
	<div class="items">
		{{#items}}
			<div class="item item-{{ source }}" data-index="{{ index }}" data-source="{{source}}">
				<a title="{{ title }}" href="{{ url }}">
					<div class="thumbnail">
						{{#thumbnail}}
							<img src="{{ thumbnail }}" alt="{{ title }}">
						{{/thumbnail}}
					</div>
					<h4>{{ title }}</h4>
				</a>
			</div>
		{{/items}}
	</div>

{{#discussions}}
<div class="discussion-module">
	<div class="discussion-header" style="background: url({{headerImage}}) center center;">
		<div class="discussion-header-alpha">
			<h3>{{title}}</h3>
			<p style="font-size: 14px;">{{postCount}} Posts</p>
			<a href="{{ discussionsUrl }}">{{linkText}} <svg xmlns="http://www.w3.org/2000/svg" width="16" height="12" viewBox="0 0 16 12"><path class="arrow-path" fill-rule="evenodd" fill="#FFFFFF" d="m9.96924,0l-1.04453,1.04453l4.17812,4.17813l-13.10283,0l0,1.49218l13.10283,0l-4.17812,4.17813l1.04453,1.04453l5.96875,-5.96875l-5.96875,-5.96875z" /></svg></a>
		</div>
	</div>

	<ul class="discussion-threads">
		{{#posts}}
		  <li class="discussion-thread" data-index="{{ index }}" data-source="{{source}}"><a href="{{link}}">
			<div class="discussion-author">
				<img src="{{authorAvatar}}" class="discussion-author-avatar" />
				<h4>{{author}}</h4>
				<span class="subtext">&#183; <time class="discussion-timestamp" datetime="{{createdAt}}"></time></span>
			</div>
			<p class="discussion-content">{{content}}</p>
			<div class="discussion-meta">
				<div class="discussion-upvotes-container">
					<svg width="20" height="20" class="discussion-icon" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path d="M20 10c0-5.523-4.477-10-10-10S0 4.477 0 10s4.477 10 10 10 10-4.477 10-10z"/><path class="upvote-icon-background" d="M9.493 6.776l-2.993 3-.75-.75L10 4.762l4.25 4.262-.75.752-3-3.008v8.522h-1l-.007-8.516z"/></svg>
					<span class="subtext">{{upvoteCount}}</span>
				</div>
				<div class="discussion-comments-container">
					<svg width="24" height="20" class="discussion-icon" viewBox="0 0 24 20" xmlns="http://www.w3.org/2000/svg"><path d="M23.47 8.1C23.92 4.23 20.4.67 15.6.12 12.7-.2 9.96.68 8.18 2.3c.4-.04.8-.06 1.2-.06 2.38 0 4.66.7 6.42 2 1.86 1.35 3.02 3.26 3.27 5.36.2 1.88-.32 3.8-1.52 5.42 2.46 1.86 4.7 1.36 4.2.96-1.47-1.12-1.78-2.2-1.7-3.06 1.9-1.08 3.2-2.8 3.42-4.83"/><path d="M17.62 9.78c-.4-3.53-3.98-6.07-8.25-6.07-.4 0-.82.03-1.23.08-4.8.54-8.3 4.1-7.86 7.96.23 2.04 1.53 3.75 3.4 4.83.1.85-.2 1.94-1.67 3.05-.22.18.1.38.74.38 1 0 2.8-.48 4.5-2.28.43.06.86.08 1.3.08.4 0 .8-.02 1.22-.06 4.8-.55 8.3-4.1 7.86-7.96"/></svg>
					<span class="subtext">{{commentCount}}</span>
				</div>
			</div>
		  </a></li>
		{{/posts}}
	</ul>

	<div class="discussion-footer">
		<a href="{{ discussionsUrl }}" class="button">Start a New Discussion</a>
	</div>
</div>
{{/discussions}}
</section>
