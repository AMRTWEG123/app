<section class="ChatModule {{sectionClassName}} ChatModuleUninitialized">
	<div class="chat-contents
		{{#userName}} chat-user-logged-in{{/userName}}
		{{^userName}} chat-user-anonymous{{/userName}}
		{{#hasUsers}} chat-room-active{{/hasUsers}}
		{{^hasUsers}} chat-room-empty{{/hasUsers}}">
		<h2 class="chat-headline">
			<span class="chat-live" data-msg-id="chat-live2"> </span>
			<span class="chat-total">{{usersCount}}</span>
		</h2>
		<p class="chat-name">{{siteName}}</p>
		<div class="chat-join">
			<button
				type="button"
				{{^userName}}class="loginToChat" {{/userName}}
				onclick="ChatWidget.onClickChatButton('{{linkToSpecialChat}}')">
				{{buttonText}}
			</button>
		</div>
		<div class="chat-whos-here">
			<span class="arrow-left"><img src="{{blankImgUrl}}" /></span>
			<span class="arrow-right"><img src="{{blankImgUrl}}" /></span>
			<div class="carousel-container">
				<div>
					<ul class="carousel" id="chatCarousel">
						{{#users}}
						<li class="chatter">
							<img src="{{blankImgUrl}}" data-src="{{avatarUrl}}" class="avatar" width="32" height="32"  />
							<div class="UserStatsMenu">
								<div class="info">
									<img data-src="{{avatarUrl}}" src="{{blankImgUrl}}" class="avatar" width="24" height="24" />
									<ul>
										<li class="username" data-user-prop="username">{{username}}</li>
										<li data-msg-param="{{editCount}}" class="edits" data-msg-id="chat-edit-count"> </li>
										<li data-msg-param="{{since}}" class="since" data-msg-id="chat-member-since"> </li>
									</ul>
								</div>
								<div class="actions">
									<ul class="regular-actions">
										<li class="profilepage {{profileType}}">
											<a href="{{profileUrl}}">
												<span class="icon">&nbsp;</span>
												<span class="label" data-msg-id="chat-user-menu-{{profileType}}"></span>
											</a>
										</li>
										<li class="contribs">
											<a href="{{contribsUrl}}">
												<span class="icon">&nbsp;</span>
												<span class="label" data-msg-id="chat-user-menu-contribs"> </span>
											</a>
										</li>
									</ul>
								</div>
							</div>
						</li>
						{{/users}}
					</ul>
					{{#myAvatarUrl}}
						<img src="{{myAvatarUrl}}" class="avatar currentUser" width="32" height="32" />
					{{/myAvatarUrl}}
				</div>
			</div>
		</div>
	</div>
</section>
{{#guidelinesText}}
	<span class="more">{{{guidelinesText}}}</span>
{{/guidelinesText}}
{{#fromParserTag}}
	<script language="javascript" type="text/javascript">if ( typeof ChatWidget!=="undefined" ) ChatWidget.init();</script>
	<a class="ChatMonobookWidget" href="{{linkToSpecialChat}}">{{joinChatText}}></a>
{{/fromParserTag}}
