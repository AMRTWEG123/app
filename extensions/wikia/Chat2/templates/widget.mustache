<section class="chat-module {{sectionClassName}} ChatModuleUninitialized">
	<div class="chat-contents
		{{#userName}} chat-user-logged-in{{/userName}}
		{{^userName}} chat-user-anonymous{{/userName}}
		{{#hasUsers}} chat-room-active{{/hasUsers}}
		{{^hasUsers}} chat-room-empty{{/hasUsers}}">
		<h2 class="chat-headline">
			<span class="chat-live" data-msg-id="chat-live2"></span>
		</h2>
		<div class="chat-details">
			<div class="avatars">
				<div class="wds-avatar-stack">
					{{#viewedUsersInfo}}
						{{#hasUsers}}
							<span class="chatter">
							<a href="{{userProfileUrl}}" class="wds-avatar-stack__avatar" title="{{username}}">
								<img class="wds-avatar" src="{{avatarUrl}}"/>
							</a>
							<div class="UserStatsMenu">
								<div class="info">
									<img data-src="{{avatarUrl}}" src="{{blankImgUrl}}" class="avatar" width="24"
										 height="24"/>
									<ul>
										<li class="username" data-user-prop="username">{{username}}</li>
										<li data-msg-param="{{editCount}}" class="edits"
											data-msg-id="chat-edit-count"> </li>
										<li data-msg-param="{{since}}" class="since" data-msg-id="chat-member-since"> </li>
									</ul>
								</div>
								<div class="actions">
									<ul class="regular-actions">
										<li class="profilepage {{profileType}}">
											<a href="{{profileUrl}}">
												{{{profileIcon}}}
												<span class="label" data-msg-id="{{profileTypeMsg}}"></span>
											</a>
										</li>
										<li class="contribs">
											<a href="{{contribsUrl}}">
												{{{contribIcon}}}
												<span class="label" data-msg-id="chat-user-menu-contribs"> </span>
											</a>
										</li>
									</ul>
								</div>
							</div>
						</span>
						{{/hasUsers}}
						{{^hasUsers}}
							<a href="{{userProfileUrl}}" class="wds-avatar-stack__avatar" title="{{username}}">
								<img class="wds-avatar" src="{{avatarUrl}}"/>
							</a>
						{{/hasUsers}}
					{{/viewedUsersInfo}}
				</div>
				{{#moreUsersCount}}
					<a href="{{linkToSpecialChat}}" class="more-users-count">
						+{{moreUsersCount}}
					</a>
				{{/moreUsersCount}}
			</div>
			<a href="{{linkToSpecialChat}}" class="wds-is-secondary wds-button wds-is-squished start-a-chat-button">
				{{buttonText}}
			</a>
		</div>
	</div>
	{{#guidelinesText}}
		<div class="more">{{{guidelinesText}}}</div>
	{{/guidelinesText}}
</section>
{{#fromParserTag}}
	<script language="javascript" type="text/javascript">if ( typeof ChatWidget!=="undefined" ) ChatWidget.init();</script>
	<a class="ChatMonobookWidget" href="{{linkToSpecialChat}}">{{joinChatText}}></a>
{{/fromParserTag}}
